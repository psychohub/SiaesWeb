@page "/asociarUsuario"

<h3>Asociar Usuario</h3>

<EditForm Model="@asociarUsuarioModel" OnValidSubmit="GuardarAsociacion" >
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="py-4">
        <div class="row form-group">
            <div class="col-6 offset-3">
                <div class="card border">
                    <div class="card-body px-lg-5 pt-4">
                        <h3 class="col-12 text-success text-center py-2">
                            <strong>Registrar Usuario</strong>
                        </h3>

                        @if (MostrarErroresRegistro)
                        {
                            <div>
                                @foreach (var error in Errores)
                                {
                                    <p class="text-danger text-center">@error</p>
                                }
                            </div>
                        }

                        <hr style="background-color:aliceblue" />

                        <div class="form-group">
                            <label for="nombreUsuario">Nombre de Usuario:</label>
                            <InputText id="nombreUsuario" class="form-control" @bind-Value="asociarUsuarioModel.NombreUsuario" autocomplete="off" />
                        </div>

                        <div class="form-group">
                            <label for="rol">Rol:</label>
                            <InputSelect id="rol" class="form-control" @bind-Value="asociarUsuarioModel.IdRol">
                                <option value="">-- Seleccione un rol --</option>
                                @foreach (var rol in roles)
                                {
                                    <option value="@rol.IdRol">@rol.Descripcion_Rol</option>
                                }
                            </InputSelect>
                        </div>

                        <div class="form-group">
                            <label for="subArea">Subárea:</label>
                            <InputSelect id="subArea" class="form-control" @bind-Value="asociarUsuarioModel.IdSubArea">
                                <option value="">-- Seleccione una subárea --</option>
                                @foreach (var subArea in subAreas)
                                {
                                    <option value="@subArea.IdSubArea">@subArea.DescripcionSubArea</option>
                                }
                            </InputSelect>
                        </div>

                        <hr style="background-color:aliceblue" />

                        <div class="py-2">
                            @if (EstaProcesando)
                            {
                                <button type="submit" class="btn btn-success btn-block disabled">
                                    <i class="fas fa-sign-in-alt"></i> Por favor espere...
                                </button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-success btn-block">
                                    <i class="fas fa-sign-in-alt"></i> Registrar
                                </button>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</EditForm>