@page "/acceder"

<h3>Login</h3>

<EditForm Model="usuarioAutenticacion" OnValidSubmit="AccesoUsuario">
    <DataAnnotationsValidator />
    <div class="py-4">
        <div class=" row form-group ">
            <div class="col-6 offset-3 ">
                <div class="card border">
                    <div class="card-body px-lg-5 pt-4">
                        <h3 class="col-12 text-success text-center py-2">
                            <strong>Inicia sesión</strong>
                        </h3>
                        @if (MostrarErroresAutenticacion)
                        {
                            <p class="text-center text-danger">@Errores</p>
                        }

                        <div class="form-row py-2">
                            <InputText @bind-Value="usuarioAutenticacion.NombreUsuario"  placeholder="Nombre usuario..." class="form-control mb-2" />
                            <ValidationMessage For="(()=>usuarioAutenticacion.NombreUsuario)"></ValidationMessage>
                        </div>

                        <div class="form-row py-2">
                            <InputText @bind-Value="usuarioAutenticacion.Clave" type="password" placeholder="Password..."  class="form-control mb-2" />
                            <ValidationMessage For="(()=>usuarioAutenticacion.Clave)"></ValidationMessage>
                        </div>
                        <div class="form-group">
                            <label for="CodEstablecimiento" style="font-size: large">Unidad Programatica:</label>
                            <InputNumber @bind-Value="usuarioAutenticacion.CodEstablecimiento" class="form-control" placeholder="Unidad Ejecutora..." />
                            <ValidationMessage For="(()=>usuarioAutenticacion.CodEstablecimiento)" />
                        </div>
                        <div class="form-group">
                            <label for="Perfil" style="font-size: large">Perfil:</label>
                            <InputSelect class="form-control" @bind-Value="usuarioAutenticacion.Perfil">
                                <option value="3">Usuario</option>
                                <option value="2">AdministradorCuenta</option>
                                <option value="1">Administrador</option>
                            </InputSelect>
                        </div>

                        <br/>
                        <div class="row">
                            <div class="col-6">
                                @if (EstaProcesando)
                                {
                                    <button type="submit" class="btn btn-success disabled" style="vertical-align:middle;line-height:30px;"><i class="fas fa-sign-in-alt"></i> Por favor espera...</button>
                                }
                                else
                                {
                                    <button type="submit" class="btn btn-success" style="vertical-align:middle;line-height:30px;"><i class="fas fa-sign-in-alt"></i> Acceder</button>
                                }
                            </div>
                            <div class="col-6">
                                <a href="/registrarse"
                                   class="btn btn-primary text-white" style="vertical-align:middle;line-height:30px;"><i class="fas fa-user-plus"></i> Olvidó contraseña</a>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

</EditForm>
