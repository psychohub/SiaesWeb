@namespace SiaesCliente.Components

@if (ShowMessage)
{
    <div class="alert alert-@Type alert-dismissible fade show" role="alert">
        @Message
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" @onclick="OnCloseClicked"></button>
    </div>
}

@code {
    [Parameter]
    public string Message { get; set; }

    [Parameter]
    public string Type { get; set; }

    [Parameter]
    public bool ShowMessage { get; set; }

    [Parameter]
    public EventCallback OnCloseClicked { get; set; }
}